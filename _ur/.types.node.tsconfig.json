{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "typeRoots": ["_types/"],
    "paths": {
      "~ur/common/*": ["common/*"],
      "~ur/server/*": ["node-server/*"],
      "~ur/types/*": ["_types/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "_dist/types",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext"
  },
  "include": ["node-server/**/*.mts", "common/**/*", "_types/**/*"],
  "exclude": [
    "web-client",
    "node_modules",
    "_dist",
    "npm-scripts",
    "test-config",
    "test",
    "vendor"
  ]
}
