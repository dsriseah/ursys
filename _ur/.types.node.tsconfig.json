{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["./_types/"],
    "paths": {
      "tsconfig/types": ["./_ur/@ur-types.d.ts"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./_dist/_types",
    "module": "NodeNext",
    "target": "ESNext"
  },
  "include": ["./node-server/**/*.mts", "./common/**/*", "./_types/**/*"],
  "exclude": [
    "./web-client",
    "./node_modules",
    "./_dist",
    "./npm-scripts",
    "./test-config",
    "./test",
    "./vendor"
  ]
}
