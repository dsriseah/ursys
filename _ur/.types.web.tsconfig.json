{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["./_types/"],
    "paths": {
      "~ur/common/*": ["./common/*"],
      "~ur/server/*": ["./node-server/*"],
      "~ur/web/*": ["./web-client/*"],
      "~ur/types/*": ["./_types/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./_dist/_types",
    "target": "ESNext"
  },
  "include": ["./web-client/**/*.ts", "./common/**/*", "./_types/**/*"],
  "exclude": [
    "./node-server",
    "./node_modules",
    "./_dist",
    "./npm-scripts",
    "./test-config",
    "./vendor"
  ]
}
