{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "typeRoots": ["types/"],
    "paths": {
      "~ur/common/*": ["common/*"],
      "~ur/types/*": ["_types/*"],
      "~ur/web/*": ["web-client/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "_dist/types",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": ["web-client/**/*.ts", "common/**/*", "_types/**/*"],
  "exclude": [
    "node-server",
    "node_modules",
    "_dist",
    "npm-scripts",
    "test-config",
    "vendor"
  ]
}
