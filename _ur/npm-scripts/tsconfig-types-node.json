{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["../_types/"],
    "paths": {
      "*": ["../_types/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../_dist/types",
    "module": "NodeNext",
    "target": "ESNext"
  },
  "include": ["../node-server/**/*.mts", "../common/**/*", "../_types/**/*"],
  "exclude": [
    "../browser-client",
    "../node_modules",
    "../_dist",
    "../npm-scripts",
    "../test-config",
    "../test",
    "../vendor"
  ]
}
