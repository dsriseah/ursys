{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["../_types/"],
    "paths": {
      "*": ["../_types/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../_dist/types",
    "target": "ESNext"
  },
  "include": ["../browser-client/**/*.ts", "../common/**/*", "../_types/**/*"],
  "exclude": [
    "../node-server",
    "../node_modules",
    "../_dist",
    "../npm-scripts",
    "../test-config",
    "../vendor"
  ]
}
