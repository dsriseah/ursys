{
  "name": "ursys",
  "version": "1.0.0-alpha.1",
  "description": "A modular self-contained development framework fpr realtime web app prototyping",
  "workspaces": [
    "_ur/",
    "_ur_addons/"
  ],
  "bin": {
    "ur": "./_ur/ur",
    "create": "./_ur/ur-create.sh"
  },
  "exports": {
    "node": {
      "import": "./_ur_exports/core-node-esm/node-server/@server.mjs",
      "require": "./_ur_exports/core-node-cjs/node-server/@server.mjs"
    },
    "browser": {
      "import": "./_ur_exports/core-web-esm.js",
      "require": "./_ur_exports/core-web-umd.js"
    }
  },
  "scripts": {
    "example": "tsx ./_ur/npm-scripts/@build-core.mts && tsx ./example-app/@run-example.mts",
    "build": "./@build-ursys.sh",
    "lint": "npm exec --workspaces -- npm run lint && eslint example-app/"
  },
  "author": "DSri Seah",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.50.1",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "esbuild": "^v0.25.0",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-umd-wrapper": "^3.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "rollup": "^4.34.8",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.2.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ursys/addons": "file:./_ur_addons",
    "@ursys/core": "file:./_ur"
  }
}
