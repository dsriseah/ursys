{
  "name": "ursys",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "description": "A modular self-contained development framework fpr realtime web app prototyping",
  "workspaces": [
    "_ur/",
    "_ur_addons/"
  ],
  "bin": {
    "ur": "./_ur/ur",
    "create": "./_ur/ur-create.sh"
  },
  "scripts": {
    "example": "npx ts-node-esm ./_ur/npm-scripts/@build-core.mts && node ./example-app/@build-example.mts",
    "build-core": "npx ts-node-esm ./_ur/npm-scripts/@build-core.mts",
    "lint": "npm exec --workspaces -- npm run lint && eslint example-app/"
  },
  "author": "DSri Seah",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "esbuild": "^0.21.4",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-umd-wrapper": "^2.0.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@ursys/addons": "file:./_ur_addons",
    "@ursys/core": "file:./_ur",
    "ts-node": "^10.9.2"
  }
}
