{
  "name": "ursys",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "description": "A modular self-contained development framework fpr realtime web app prototyping",
  "workspaces": [
    "_ur/",
    "_ur_addons/"
  ],
  "bin": {
    "ur": "./_ur/ur",
    "create": "./_ur/ur-create.sh"
  },
  "scripts": {
    "example": "npx ts-node-esm ./_ur/npm-scripts/@build-core.mts && node ./example-app/@build-example.mjs",
    "build-core": "npx ts-node-esm ./_ur/npm-scripts/@build-core.mts",
    "lint": "npm exec --workspaces -- npm run lint && eslint example-app/"
  },
  "author": "DSri Seah",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "esbuild": "^0.23.0",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-umd-wrapper": "^3.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@ursys/addons": "file:./_ur_addons",
    "@ursys/core": "file:./_ur",
    "ts-node": "^10.9.2"
  }
}
