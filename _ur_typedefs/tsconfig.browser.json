{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "declaration": false,
    "importHelpers": true
  },
  "include": ["../_ur/**/*.ts"],
  "exclude": ["../_ur/node-server/**/*.ts", "../_ur/common/**/*.ts", "../_ur/tests"]
}
